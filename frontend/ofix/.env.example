# Tamanho maximo do upload em MB
NUXT_MAX_UPLOAD_MB=20

# URL de conexao com o Redis (BullMQ e estado dos jobs)
NUXT_REDIS_URL=redis://localhost:6379

# Diretorio temporario para arquivos PDF e OFX gerados
NUXT_TEMP_DIR=./temp

# Tempo em horas para limpeza de arquivos temporarios antigos
NUXT_CLEANUP_AGE_HOURS=24

# Timeout em ms para o processo Python de conversao
NUXT_PYTHON_JOB_TIMEOUT_MS=300000

# Caminho absoluto ou relativo ao script Python de conversao
NUXT_CONVERTER_SCRIPT_PATH=../../conversor-python/convert.py

# Segredo compartilhado entre o worker e a API para autenticar atualizacoes de status
# Gere um valor aleatorio longo em producao (ex: openssl rand -hex 32)
NUXT_WORKER_SECRET=dev-worker-secret-change-in-prod

# URL base da API Nuxt (usada pelo worker para chamar o endpoint de status)
NUXT_API_URL=http://localhost:3000
